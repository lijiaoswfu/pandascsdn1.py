<Window x:Class="WpfApp1.Window3DGIS"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Window3DGIS" Height="450" Width="800">
    <Window.Resources>
        <local:SceneViewModel x:Key="SceneViewModel" />
    </Window.Resources>
    <Grid>
        <esri:SceneView x:Name="MainSceneView"
                        Scene="{Binding Scene, Source={StaticResource SceneViewModel}}" />
        <Button Content="地理信息处理" HorizontalAlignment="Left" VerticalAlignment="Top"
               BorderBrush="{StaticResource DarkDangerBrush}" BorderThickness="2"  hc:BorderElement.CornerRadius="10" hc:IconElement.Geometry="{StaticResource AlignBottomGeometry}" Margin="0,20,0,0"   />
    </Grid>
</Window>
